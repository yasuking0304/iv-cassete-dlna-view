<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:View"
        Title="MainWindow" Height="570" Width="838" MinHeight="145" MinWidth="838" 
        Loaded="WindowLoaded" FontStretch="Condensed" ScrollViewer.HorizontalScrollBarVisibility="Visible">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources/ViewStyle.xaml"/>
                <ResourceDictionary>
                    <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="Gray" Offset="0"/>
                    <GradientStop Color="#FFE4E0E0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="170*" Name="DriveComboBoxArea" MinWidth="40"/>
                <ColumnDefinition Width="485*" MinWidth="154"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock Text="{StaticResource LBL_DRIVE}" VerticalAlignment="Center" HorizontalAlignment="Left"
                Margin="5" FontSize="14" Foreground="#191F5D"/>
            </Grid>
            <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Width="2" Opacity="0" Margin="-2,0"/>
            <Grid Grid.Column="1">
                <ComboBox Height="26" HorizontalAlignment="Stretch" Name="DriveComboBox" FontSize="15" FontWeight="ExtraLight" IsEnabled="False"
                          VerticalAlignment="Bottom" Margin="0,0,0,7" Style="{StaticResource ComboBoxStyle}"
                          MinWidth="{Binding ElementName=DriveComboBoxArea,Path=ActualWidth}" RenderTransformOrigin="1,1">
                </ComboBox>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="200*" Name="FolderComboBoxArea" MinWidth="38"/>
                    <ColumnDefinition Width="180*" Name="SearchTextArea" MinWidth="38"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Text="{StaticResource LBL_FOLDER}" VerticalAlignment="Center"
                            Margin="5,8,0,8" FontSize="14" Foreground="#191F5D" Grid.Row="1"/>
                </Grid>
                <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Width="2" Opacity="0" Margin="-3,0"
                          Visibility="{Binding ElementName=RecSearch,Path=Visibility}"/>
                <Grid Grid.Column="1">
                    <ComboBox Name="FolderComboBox" Height="26" HorizontalAlignment="Stretch" FontSize="15" FontWeight="ExtraLight"
                          VerticalAlignment="Center" Margin="0,0,0,0"
                          Style="{StaticResource ComboBoxStyle}" MinWidth="{Binding ElementName=FolderComboBoxArea,Path=ActualWidth}">
                    </ComboBox>
                </Grid>
                <Grid Grid.Column="2">
                    <TextBox Name="RecSearch" Height="26" Margin="5,0,0,0" FontSize="15" FontWeight="ExtraLight" KeyUp="RecSearchKeyUp"
                         Style="{DynamicResource TtextBoxtyle}"
                         HorizontalAlignment="Stretch" MinWidth="{Binding ElementName=SearchTextArea,Path=ActualWidth}"
                         IsEnabled="{Binding Path=IsEnabled, ElementName=FolderComboBox}"/>
                    <Button Name="SearchDoneButton" Width="16" Height="16" BorderThickness="0" Style="{DynamicResource SearchButtonStyle}"
                                         Margin="0,0,4,0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center"
                                         Focusable="False" Click="SearchDoneButtonClicked"
                                         IsEnabled="{Binding Path=IsEnabled, ElementName=RecSearch}">
                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.Column="4">
                <Button Name="CopyButton" Style="{StaticResource ButtonStyle}" Height="26" Margin="1,0,4,0"
                                         Content="{StaticResource LBL_COPYBUTTON_COPYMODE}" Focusable="False" Click="CopyButtonClicked">
                    <Button.ToolTip>
                        <ToolTip Placement="Bottom">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Text="{StaticResource LBL_COPYBUTTON}"/>
                                <TextBlock Text="{StaticResource LBL_COPYBUTTON_GUIDANCE}"/>
                                <Border BorderBrush="Gray" BorderThickness="0,1,0,0" Margin="0,8" />
                                <WrapPanel>
                                    <Image Source="./Images/info-2-16.png" Margin="0,0,5,0" />
                                    <TextBlock FontStyle="Italic" Text="{StaticResource LBL_COPYBUTTON_HELP}"/>
                                </WrapPanel>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                    <ToolTipService.HorizontalOffset>-5</ToolTipService.HorizontalOffset>
                    <ToolTipService.ShowOnDisabled>true</ToolTipService.ShowOnDisabled>
                    <ToolTipService.VerticalOffset>-10</ToolTipService.VerticalOffset>
                </Button>
            </Grid>

        </Grid>
        <Grid Grid.Row="1" Name="SelectPanel">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFE4E0E0" Offset="0"/>
                    <GradientStop Color="White" Offset="0.7"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <TextBlock Text="{StaticResource LBL_ORDER}" Style="{StaticResource TextBlockLabelStyle}"
                           VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14"/>
            </Grid>
            <Grid Grid.Column="2">
                <ToggleButton Name="ToggleLeftButton" Content="{StaticResource LBL_ORDER_FILE}"
                              HorizontalAlignment="Left" Height="20" Margin="0,0,0,0" VerticalAlignment="Center"
                              Width="75" FontWeight="Normal" FontSize="13"
                              IsChecked="False"
                              Style="{StaticResource ToggleLeftButtonStyle}"
                              Checked="ToggleButtonChecked" Unchecked="ToggleButtonChecked"
                              IsEnabled="{Binding Path=IsEnabled, ElementName=FolderComboBox}"/>
                <ToggleButton Name="ToggleRightButton" Content="{StaticResource LBL_ORDER_DATE}"
                              HorizontalAlignment="Left" Height="20" Margin="75,0,0,0" VerticalAlignment="Center"
                              Width="75" FontWeight="Normal" FontSize="13"
                              Style="{StaticResource ToggleRightButtonStyle}"
                              IsChecked="{Binding Path=IsChecked, ElementName=ToggleLeftButton, Converter={StaticResource InverseBooleanConverter}}"
                              Checked="ToggleButtonChecked" Unchecked="ToggleButtonChecked"
                              IsEnabled="{Binding Path=IsEnabled ,ElementName=ToggleLeftButton}"/>

            </Grid>
            <Grid Grid.Column="4">
            </Grid>
            <Grid Grid.Column="19">
                <TextBlock Name="RealTime" FontSize="22" FontFamily="Arial"
                       HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

            </Grid>
        </Grid>
        <Grid Grid.Row="2" Name="Panel1" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="145*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="listBox1"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VerticalAlignment="Stretch"
                     BorderThickness="0"
                     Margin="0"
                     Grid.Row="0"
                     Focusable="False"
                     ItemTemplate="{StaticResource ItemTemplateStyle1}"
                     ItemContainerStyle="{DynamicResource ListBoxItemStyle1}"
                     ItemsSource="{Binding}" Grid.ColumnSpan="2"/>
        </Grid>
        <Grid Grid.Row="2" Name="Panel3" Visibility="Hidden">
            <ListBox Name="listBox3"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VerticalAlignment="Stretch"
                     BorderThickness="0"
                     Margin="0"
                     Grid.Row="0"
                     Focusable="False"
                     ItemTemplate="{StaticResource ItemTemplateStyle3}"
                     ItemContainerStyle="{DynamicResource ListBoxItemStyle1}"
                     ItemsSource="{Binding}">
            </ListBox>
        </Grid>
        <Grid Grid.Row="2" Name="PanelWait" Visibility="Hidden">
            <StackPanel Background="White" Opacity="0.75"/>

            <Button Name="PanelCloseButton" Width="22" Height="22" BorderThickness="0" Style="{DynamicResource CloseButtonStyle}"
                         Margin="16,16,16,16" HorizontalAlignment="Right" VerticalAlignment="Top"
                         Focusable="False" Click="PanelCloseButtonClicked" />


            <TextBlock Height="20" FontSize="15" Text="{Binding Manufacturer}"  Margin="5,5,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Red" Offset="0"/>
                        <GradientStop Color="Red" Offset="0.8"/>
                        <GradientStop Color="Pink" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <!-- -->
            <TextBlock Height="35" FontSize="28" Text="{Binding Modelname}"  Margin="5,20,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Black" Offset="0.9"/>
                        <GradientStop Color="Gray" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock Height="35" FontSize="28" Text="{Binding Modelname}"  Margin="5,50,0,0" RenderTransformOrigin="0.5,0.5"
                       HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" Opacity="0.4">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="White" Offset="0.2"/>
                        <GradientStop Color="Gray" Offset="0.6"/>
                        <GradientStop Color="Gray" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="-1" />
                </TextBlock.RenderTransform>
            </TextBlock>
